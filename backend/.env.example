# ============================================
# BACKEND ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values

# Server Port
PORT=3001

# Flare Network Configuration
# For Flare Coston2 Testnet
FLARE_RPC_URL=https://coston2-api.flare.network/ext/C/rpc

# For Testnet (Coston2) - Use this when deploying to testnet
# FLARE_RPC_URL=https://coston2-api.flare.network/ext/C/rpc

# For Mainnet - Use this for production
# FLARE_RPC_URL=https://flare-api.flare.network/ext/bc/C/rpc

# Your MetaMask Private Key (WITHOUT the 0x prefix)
# ⚠️ NEVER SHARE THIS OR COMMIT IT TO GIT!
PRIVATE_KEY=

# IPFS Configuration
# If running local IPFS daemon (recommended for development)
IPFS_API_URL=http://127.0.0.1:5001

# If using Pinata (alternative to local IPFS)
# IPFS_API_URL=https://api.pinata.cloud
# PINATA_API_KEY=your_pinata_api_key
# PINATA_SECRET_KEY=your_pinata_secret_key

# IPFS Gateway for retrieving files
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/

# Smart Contract Addresses
# ⚠️ FILL THESE IN AFTER DEPLOYING CONTRACTS!
# You'll get these addresses when you run: npm run deploy (in contracts folder)
MOCK_USDT_ADDRESS=
FASSET_REGISTRY_ADDRESS=
PRICE_ORACLE_ADDRESS=
JOB_LISTING_TOKEN_ADDRESS=
JOB_TOKEN_FACTORY_ADDRESS=
ESCROW_WALLET_ADDRESS=
